{
  "name": "TS-START-CONVEX",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "pnpm convex dev --once && concurrently -r pnpm:dev:web pnpm:dev:convex",
    "dev:web": "NODE_OPTIONS='--import ./instrument.server.mjs' vite dev",
    "dev:ts": "tsc -b -w",
    "dev:convex": "pnpm convex dev",
    "build": "convex codegen && vite build && tsc --noEmit && cp instrument.server.mjs dist/server/",
    "start": "node --import ./dist/server/instrument.server.mjs dist/server/server.js",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "convex:codegen": "convex codegen",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.90",
    "@convex-dev/react-query": "^0.0.0-alpha.11",
    "@sentry/react": "^10.23.0",
    "@sentry/tanstackstart-react": "^10.23.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-router": "^1.132.2",
    "@tanstack/react-router-with-query": "^1.130.17",
    "@tanstack/react-start": "^1.132.2",
    "convex": "^1.28.0",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^13.5.0"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.0.0",
    "@netlify/vite-plugin-tanstack-start": "^1.1.11",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/eslint-config": "^0.3.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "~9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@tailwindcss/oxide"
    ]
  }
}
