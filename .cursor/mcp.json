{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "convex": {
      "command": "npx -y convex@latest mcp start",
      "env": {},
      "args": []
    },
    "netlify": {
      "command": "npx",
      "args": ["-y", "@netlify/mcp"]
    },
    "sentry": {
      "url": "https://mcp.sentry.dev/mcp"
    },
    "cloudflare": {
      "url": "https://docs.mcp.cloudflare.com/mcp"
    }
  }
}
